doctype html
html
	head
		title The smoking room
		link(rel='stylesheet' href='css/smoking-main.css')

	body

		section#intro
			b.leaves.right
			b.leaves.left
			div#intro-wrap
				h1.site-title Welcome to <br> The smoking room

				div.module#selection
					p.module-title Enter your name, choose<br> an e-cig and start vaping

					div#set-username.box
						input(type='text' placeholder='What\'s your name?')#username
					div#set-cig.box
						h2.module-title Which cigarette?
						ul#cig-list.list
							li.cig.selected#cig1
								img(src='img/cig1.png')
							li.cig#cig2
								img(src='img/cig2.png')
							li.cig#cig3
								img(src='img/cig3.png')

				div#set-avatar.module.box
					div#webcam

					div#buffer-container
						canvas#buffer(width='466' height='350')

					div#avatar-container
						canvas#avatar(width='260' height='350')

					div#controls
						a#make-avatar.btn(href='#') Go
						a#try-again.btn.hidden(href='#') No, Again
						a#ready-go.btn.hidden(href='#') Yes, ready

		section#room.blur
			ul#user-list

			div#chat-windows

			div.smoke-signs.box
				a#heart(href='#')
					img(src='img/heart-btn.png' alt='send a heart')
				a#lol(href='#')
					img(src='img/lol-btn.png' alt='send some lulz')


		
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
		script(src='socket.io/socket.io.js')
		script(src='components/getUserMedia.js/lib/getUserMedia.js')
		script(src='components/getUserMedia.js/face-detection-demo/js/glasses/ccv.js')
		script(src='components/getUserMedia.js/face-detection-demo/js/glasses/face.js')
		script(src='js/webcam.js')
		script(src='js/smoke.js')
		script(src='js/smoke2.js')
		script(src='js/templates.js')
		script(src='js/sockets.js')
		script(src='js/main.js')
